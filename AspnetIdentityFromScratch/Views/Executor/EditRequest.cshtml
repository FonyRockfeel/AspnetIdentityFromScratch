@model AspnetIdentityFromScratch.ViewModels.StateChangeVmodel
@{
    ViewBag.Title = "EditRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Изменить обращение</h2>

@using (Html.BeginForm("EditRequest", "Executor", FormMethod.Post, new{@class="form-horizontal", role="role"}))
{
    @Html.AntiForgeryToken()
    <div class="col-md-10">
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        @Html.TextBoxFor(m => m.Id, new { @Value = Model.Id,@type="hidden" }) 
        <div class="form-group">
            @Html.LabelFor(m => m.ClientName, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.LabelFor(m => m.ClientName, Model.ClientName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.LabelFor(m => m.Phone, Model.Phone, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Category, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.LabelFor(m=>m.Category,Model.Category, new { @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Time, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.LabelFor(m=>m.Time, Model.Time.ToString(), new { @class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Text, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <div>
                    @Html.DisplayTextFor(m => m.Text)
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.State, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <div class="col-md-10">
                    @Html.RadioButtonFor(m => m.State, "Исполнено")
                    <span>Исполнено</span>
                </div>
                <div class="col-md-10">
                    @Html.RadioButtonFor(m => m.State, "Не исполнено")
                    <span>Не исполнено</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Comment, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Comment, new { @id = "textarea", @class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" class="btn btn-default" value="Изменить" />
            </div>
            <div class="col-md-offset-2">
               @Html.ActionLink("Отмена","Index","Executor", null, new {@class="btn btn-default"})
            </div>
        </div>
    </div>
}
<script>
    $("textarea").resizable();
</script>

